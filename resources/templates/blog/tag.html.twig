{% extends 'layouts/blog.html.twig' %}

{% block blog_header %}
    <section id="hero">
        <twig:block-hero
            size="mini"
        title="{{ blog.title | default('Insights & Updates') }}"
        subtitle="{{ blog.subtitle | default('Thoughts, stories, and the latest from our world.') }}"
        align="center"
        />
    </section>
{% endblock %}

{% block blog_content %}
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ base_path }}/blog">Blog</a></li>
            <li class="breadcrumb-item active" aria-current="page">Tag: {{ tag.name }}</li>
        </ol>
    </nav>
    {% for post in posts %}
        <div class="mb-5">
            <twig:block-card
                image="{{ post.image | default(base_path ~ '/img/blog/default.webp') }}"
                title="{{ post.title }}"
                description="<div class='text-muted small mb-2'>Por {{ post.author.name }} el {{ post.published | date('d/m/Y') }} • {{ post.time }} min de lectura</div>{{ post.summary | markdown }}"
                buttonText="Leer más"
                buttonUrl="/blog/{{ post.slug }}"
            />
        </div>
    {% endfor %}
{% endblock %}

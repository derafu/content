<html>
    <head>
        <style>
            footer {
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                text-align: center;
                font-weight: bold;
                font-size: 8pt;
                border-top: 1px solid #000;
                padding: 5px 0;
                margin: 0;
                background-color: #fff;
            }
        </style>
    </head>
    <body>

        <h1>{{ post.title }}</h1>

        {% if post.title %}
            <div><small><strong>{{ post.title }}</strong></small></div>
        {% endif %}

        <blockquote style="color: #333; font-style: italic;">{{ post.summary }}</blockquote>

        <table style="width: 100%; text-align: center;">
            <tr>
                <th>Autor</th>
                <th>Fecha</th>
            </tr>
            <tr>
                <td>{{ post.author.name | default('Anonymous') }}</td>
                <td>{{ post.published | date('d/m/Y') }}</td>
            </tr>
        </table>

        {{ post.data | markdown }}

        <footer>
            Última actualización: {{ post.modified | date('d/m/Y') }}
            {{ post.tags | map(tag => '#' ~ tag.slug) | join(', ') }}
        </footer>

    </body>
</html>

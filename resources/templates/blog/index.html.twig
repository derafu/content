{% extends 'layouts/blog.html.twig' %}

{% block blog_header %}
    <section id="hero">
        <twig:block-hero
            size="small"
            background="{{ base_path }}/img/content/blog/default-cover.png"
            title="{{ blog.title | default('Insights & Updates') }}"
            subtitle="{{ blog.subtitle | default('Thoughts, stories, and the latest from our world.') }}"
            align="left"
        />
    </section>
{% endblock %}

{% block blog_content %}
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Blog</li>
        </ol>
    </nav>
    {% for post in posts %}
        <div class="mb-4">
            <twig:block-card
                image="{{ post.image | default(base_path ~ '/img/content/blog/default-cover.png') }}"
                title="{{ post.title }}"
                description="<div class='text-muted small mb-2'>Por {{ post.author.name }} el {{ post.published | date('d/m/Y') }} • {{ post.time }} min de lectura</div>{{ post.summary | markdown }}"
                buttonText="Leer más"
                buttonUrl="{{ path('blog_show', {'uri': post.uri}) }}"
            />
        </div>
    {% endfor %}
{% endblock %}

{% extends 'layouts/docs.html.twig' %}

{% block title %}{{ doc.title }}{% endblock %}

{% block docs_content %}
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('docs') }}">Docs</a>
            </li>
            {% for ancestor in doc.ancestors %}
                <li class="breadcrumb-item">
                    <a href="{{ path('docs_doc', {'uri': ancestor.uri}) }}">{{ ancestor.title }}</a>
                </li>
            {% endfor %}
            <li class="breadcrumb-item active" aria-current="page">
                {{ doc.title }}
            </li>
        </ol>
    </nav>

    {% if doc.data %}
        {{ doc.data | markdown }}
    {% endif %}

    {% if doc.metadata.iframe %}
        <iframe src="{{ doc.metadata.iframe }}" width="100%" height="800px" allow="autoplay"></iframe>
    {% endif %}

    {% if doc.video %}
        <div class="plyr__video-embed ratio ratio-16x9" id="player">
            <iframe
                src="{{ doc.video }}"
                allowfullscreen
                allowtransparency
                allow="autoplay"
            ></iframe>
        </div>
    {% endif %}

    {% if doc.metadata.openapi %}
        <div id="swagger-ui"></div>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swagger-ui-dist@latest/swagger-ui.css">
        <script src="https://cdn.jsdelivr.net/npm/swagger-ui-dist@latest/swagger-ui-bundle.js"></script>
        <script>
            SwaggerUIBundle({
                url: "{{ doc.metadata.openapi }}",
                dom_id: '#swagger-ui',
                defaultModelsExpandDepth: -1
            });
        </script>
    {% endif %}

    <hr class="my-5">
    <div class="row text-muted small">
        <div class="col-md-6">
            Última actualización: {{ doc.modified | date('d/m/Y') }}
        </div>
        <div class="col-md-6 text-end">
            {{ doc.tags | map(tag => '#' ~ tag.slug) | join(', ') }}
        </div>
    </div>
{% endblock %}
